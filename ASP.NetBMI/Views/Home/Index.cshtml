@using ASP.NetBMI.Models
@model Bmi
@{
    ViewData["Title"] = "BMI Calculator";
}

<div class="row margin-50">
    <div class="col-md-6">
        <!-- Use without ajax-->
        <!-- <form class="bmi-form" asp-action="Bmi" method="post"> -->
        <!-- Use with ajax-->
        <form asp-action="Bmi" data-ajax="true" data-ajax-method="POST" data-ajax-mode="replace" data-ajax-update="#result">
            <div asp-validation-summary="All"></div>
            <div class="form-group">
                <label asp-for="Height"></label><br />
                <input class="form-control" asp-for="Height" />
            </div>
            <div class="form-group">
                <label asp-for="Weight"></label><br>
                <input class="form-control" asp-for="Weight" />
            </div>
            <button type="submit" class="btn btn-primary">Calculate</button>
        </form> 
    </div>
    <div class="col-md-6">
        <div id="result"></div>
    </div>
</div>

@* Package Manager Console Input: PM> Install-Package Microsoft.jQuery.Unobtrusive.Ajax -Version 3.2.3
